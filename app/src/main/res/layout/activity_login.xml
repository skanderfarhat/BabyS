<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/bbs"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".LoginActivity">

    <Switch
        android:id="@+id/family_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/rectangle_thumb"
        android:text="Je cherche un BabySitter"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:track="@drawable/rectangle_track"/>


    <Switch
        android:id="@+id/bbs_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:thumb="@drawable/round_thumb"
        android:track="@drawable/round_track"
        android:text="Je suis un BabySitter       "
        android:textColor="@color/red"
        android:textSize="20dp"
        android:layout_below="@id/family_switch"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bbs_switch"
        android:layout_gravity="bottom"
        android:text="Valider" />


</RelativeLayout>